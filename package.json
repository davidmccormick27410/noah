{
  "name": "noah",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "sasslintConfig": "sasslist.yaml",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "devserver": "live-server --browser=firefox",
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "lint:sass": "sass-lint --config sasslint.yaml '**/*.scss' --verbose --no-exit",
    
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidmccormick27410/noah.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davidmccormick27410/noah/issues"
  },
  "homepage": "https://github.com/davidmccormick27410/noah#readme",
  "dependencies": {
    "cosmiconfig": "^5.0.6",
    "devserver": "^0.2.5",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3"
  },
  "stylelint": {
    "rules": {
      "block-no-empty": null,
      "color-no-invalid-hex": true,
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "stylelint-commands",
            "after-comment"
          ]
        }
      ],
      "declaration-colon-space-after": "always",
      "indentation": [
        "tab",
        {
          "except": [
            "value"
          ]
        }
      ],
      "max-empty-lines": 2,
      "rule-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "unit-whitelist": [
        "em",
        "rem",
        "%",
        "s"
      ]
    }
  }
}
